<?xml version="1.0" encoding="utf-8"?>
<pms status="{{ status }}">
    {% for item in groups %}
        <group>
            <name>
                {{item.group.name}}
            </name>
            <owner>
                {{item.group.owner.name}}
            </owner>
            <password required="{{item.group.password_required}}" />
        </group>
    {% endfor %}
</pms>